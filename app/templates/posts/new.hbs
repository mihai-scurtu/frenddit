<div class="container">
  <h1>New post</h1>
  <form action="" class="col-md-6 ">
    <div class="form-group">
      <label for="">Title</label>
      {{input type="text" value=post.title class="form-control"}}
    </div>
    <div class="form-group">
      <label for="">Link</label>
      {{input type="text" value=post.link class="form-control"}}
    </div>
    <div class="form-footer">
      <button {{action "save"}} class="btn btn-primary">Submit</button>
      {{link-to "Cancel" "posts.index" class="btn btn-danger"}}
    </div>
  </form>
</div>
